overhead "Starting Poison Routine!" 45
unsetvar myKillTarget
hotkey 'Next Non-Friendly Monster Target'
wait 100
setvar! firstTarget lasttarget 
@setvar! loopDone 0
while loopDone = 0
    if hits < 70
        overhead "GTFO!!!"
        script "stayalive2"
    endif
    hotkey 'Next Non-Friendly Monster Target'
    wait 100
    setvar! myKillTarget lasttarget 
    if myKillTarget = firstTarget
        @setvar! loopDone 1
    endif
    getlabel myKillTarget desc2
    if noto myKillTarget != hostile
        overhead "Something wrong!"
        script "stayalive2"
    endif
         
    getlabel myKillTarget desc2
    overhead desc2 66
    if "Ticks" in desc2
        overhead "Poisoned already skip" 23
    else 
        while not targetexists
            cast 'poison'
            wait 25
        endwhile
        target myKillTarget
    endif
    wait 200
    
    @setvar! isLethalPoison 0 
    while isLethalPoison = 0 and loopDone = 0      
        getlabel myKillTarget desc2
        overhead desc2 66
        // poison lethal
        if "Lethal" in desc2
            @setvar! isLethalPoison 1
        elseif "Deadly" in desc2
            @setvar! isLethalPoison 1
        elseif "spy" in desc2
            @setvar! isLethalPoison 1
        elseif "pirate" in desc2
            @setvar! isLethalPoison 1
            overhead "Skippy pirate!"
        elseif "fisher" in desc2
            @setvar! isLethalPoison 1
            overhead "Skippy"
        elseif "orc" in desc2
            @setvar! isLethalPoison 1
            overhead "Skippy"
        elseif "tradesman" in desc2
            @setvar! isLethalPoison 1
            overhead "Skippy"
        elseif "merchant" in desc2
            @setvar! isLethalPoison 1
            overhead "Skippy"
        elseif "sailor" in desc2
            @setvar! isLethalPoison 1
            overhead "Skippy"
        elseif diffhits >= 40 
            // need a heal
            script "stayalive2"
        elseif mana >= 9
            while not targetexists
                cast 'poison'
                wait 50
            endwhile
            target myKillTarget
            wait 2000
        else
            wait 200
        endif
    endwhile
endwhile    

sysmsg "Done poisoning" 23
overhead "Done poisoning" 23

script "SpyglassSimple"