clearsysmsg 
if not timerexists "fishy"
    createtimer "fishy"
    settimer "fishy" 61000
endif

if lhandempty
    dress 'Fishing'
    wait 500
endif

hotkey 'Use item in hand'
settimer "fishy" 0

while not dead 
    if lhandempty
        dress 'Fishing'
        wait 500
    endif
    
    if timer "fishy" > 8550
        hotkey 'Use item in hand'
        settimer "fishy" 0
    endif
endwhile