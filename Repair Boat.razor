while not dead
    say '[RepairHull'
    wait 1000
    if insysmsg 'hull does not need'
        say '[RepairSails'
        wait 1000
        if insysmsg 'sails do not need'
            say '[RepairGuns'
            wait 1000
            if insysmsg 'guns do not need'
                stop
            else 
                overhead "Repair Script Engaged"
            endif
        else
            overhead "Repair Script Engaged"
            wait 1000
        endif
    else
        overhead "Repair Script Engaged"
        wait 1000
    endif
    
    wait 9000
endwhile