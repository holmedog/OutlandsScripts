#Script by Brozan
#Requires Peacemaking and an instrument
#Tames creature - nothing else

clearsysmsg
overhead 'Select Taming Target'
setvar! 'tameTarget'
createtimer peaceTimer 
settimer peaceTimer 5000
createtimer tamingTimer 
settimer tamingTimer 11000
while not dead 
    if insysmsg 'You fail'
        settimer tamingTimer 15000
    endif
    wait 200
    if timer 'peaceTimer' > 20000 and timer 'tamingTimer' >= 10500 and timer 'tamingTimer' <= 13000
        hotkey 'Peacemaking'
        wft 1000
        target 'tameTarget'
        settimer 'peaceTimer' 0
    endif
    wait 200
    if timer 'tamingTimer' > 13000
        useskill 'Taming'
        wft 1000
        target 'tameTarget'
        settimer 'tamingTimer' 0
    endif
endwhile
