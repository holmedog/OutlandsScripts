 
 if not timerexists "meditat"
    createtimer "meditat"
    settimer "meditat" 61000
endif

while skill "Meditation" < 80
    if mana > 50 
        say "A fire elemental release"
        cast 'Fire Elemental'
        wait 3000
    endif
    if timer "meditat" > 10500 
        skill 'meditation'
        wait 500
        say "Stop Medding!"
        settimer "meditat" 0
    endif
endwhile    
    