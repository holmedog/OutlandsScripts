if not varexist tillerguy
  setvar! tillerguy 
  overhead "Target your tillerman"
endif
if not varexist shipStatusBar
  setvar! shipStatusBar
  overhead "Target your white hp status bar"
endif

clearignore 

while findtype 15947|28116|15952|15947|15955|15950|14421 ground as enemyTiller
    if enemyTiller = tillerguy 
        #overhead "Found my guy!"
    elseif enemyTiller = shipStatusBar
        #nothing
    else
        dclick enemyTiller
        wait 100
    endif
    @ignore enemyTiller 
endwhile
clearignore 