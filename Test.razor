createlist myPets
clearlist myPets

for 20
    hotkey 'Next Friendly Monster Target'
    @setvar! 'lastserial' lasttarget

    menu lastserial 1
    wait 200
    if targetexists
        overhead "it is my pet!"
        if not inlist myPets 'lastserial'
            pushlist myPets 'lastserial' 
        endif
    endif
    hotkey 'Cancel current target'
endfor    

foreach x in myPets
    overhead 'Pet: {{x}}'
endfor