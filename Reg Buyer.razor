        skill 'meditation'
		wait 3000
	endwhile
	
    cast 'Recall'
    wft 5000
    target runeBookFarm

    for 4 
        wait 900       
        if followers > 1
            say "All follow me"
        endif   
    endfor
    
    overhead "Dump regs"
    menu resourceStockpile 0
    wft 1500
    target 'packAnimal'
    
    overhead "Restock self"
    wait 500
    menu storageShelf 1
    wft 1500
            
    while followers < 1
